<h1>Create a new alarm</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@alarm, url: create_path) do |f| %>
      
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.submit "Submit comment", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>